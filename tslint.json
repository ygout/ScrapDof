{
    "jsRules": {
      "class-name": true,
      "comment-format": [
        true,
        "check-space"
      ],
      "indent": [
        true,
        "spaces"
      ],
      "no-duplicate-variable": true,
      "no-eval": true,
      "no-trailing-whitespace": true,
      "no-unsafe-finally": true,
      "one-line": [
        true,
        "check-open-brace",
        "check-whitespace"
      ],
      "quotemark": [
        true,
        "single",
        "avoid-escape"
      ],
      "semicolon": [
        true,
        "always"
      ],
      "triple-equals": [
        true,
        "allow-null-check"
      ],
      "whitespace": [
        true,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-separator",
        "check-type"
      ]
    },
    "rules": {
      "member-ordering": [true, {
        "order": [
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }],
      "indent": [
        true,
        "spaces"
      ],
      "ban": [
        true,
        "eval",
        { "name": ["describe", "only"], "message": "Do not focus tests" },
        { "name": ["it", "only"], "message": "Do not focus tests" },
        { "name": ["describe", "skip"], "message": "Do not skip tests" },
        { "name": ["it", "skip"], "message": "Do not skip tests" }
  
      ],
      "no-internal-module": true,
      "no-trailing-whitespace": true,
      "no-var-keyword": true,
      "no-var-requires": true,
      "semicolon": [
        true,
        "always"
      ],
      "triple-equals": [
        true,
        "allow-null-check"
      ],
      "typedef": [
        true,
        "call-signature",
        "parameter",
        "property-declaration"
      ],
      "typedef-whitespace": [
        true,
        {
          "call-signature": "nospace",
          "index-signature": "nospace",
          "parameter": "nospace",
          "property-declaration": "nospace",
          "variable-declaration": "nospace"
        }
      ],
      "unified-signatures": true,
      "await-promise": false,
      "curly": true,
      "no-arg": true,
      "no-conditional-assignment": true,
      "no-console": [true, "error", "debug", "log"],
      "no-construct": true,
      "no-debugger": true,
      "no-empty": false,
      "no-eval": true,
      "no-for-in-array": false,
      "no-misused-new": true,
      "no-shadowed-variable": true,
      "no-string-throw": true,
      "no-unbound-method": false,
      "no-unsafe-finally": true,
      "no-unused-expression": [true, "allow-fast-null-checks"],
      "no-void-expression": false,
      "restrict-plus-operands": false,
      "strict-type-predicates": false,
      "use-isnan": true,
      "eofline": true,
      "linebreak-style": [true, "LF"],
      "max-classes-per-file": [true, 1],
      "max-line-length": [true, 120],
      "no-default-export": true,
      "no-mergeable-namespace": true,
      "prefer-const": true,
      "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
      "align": [true, "statements"],
      "array-type": [true, "array"],
      "arrow-return-shorthand": [true],
      "callable-types": true,
      "class-name": true,
      "comment-format": [true, "check-space"],
      "import-spacing": true,
      "interface-name": [true, "never-prefix"],
      "interface-over-type-literal": true,
      "new-parens": true,
      "no-angle-bracket-type-assertion": true,
      "no-boolean-literal-compare": false,
      "no-consecutive-blank-lines": [true, 2],
      "no-unnecessary-qualifier": false,
      "object-literal-key-quotes": [true, "as-needed"],
      "object-literal-shorthand": true,
      "one-line": [
        true,
        "check-catch",
        "check-finally",
        "check-else",
        "check-open-brace",
        "check-whitespace"
      ],
      "one-variable-per-declaration": [true],
      "prefer-method-signature": true,
      "quotemark": [true, "single"],
      "variable-name": [true, "check-format", "allow-leading-underscore", "ban-keywords", "allow-pascal-case"],
      "whitespace": [
        true,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-module",
        "check-separator",
        "check-type",
        "check-preblock"
      ]
    }
  }
  